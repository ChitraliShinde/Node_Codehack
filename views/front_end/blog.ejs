<!DOCTYPE html>
<html lang="en">

<!-- Header -->
<% include public_header.ejs%>
<!-- /Header -->

<!-- Hero-area -->
<div class="hero-area section">

    <!-- Backgound Image -->
    <div class="bg-image bg-parallax overlay" style="background-image:url(../front_end/img/bg5.gif)"></div>
    <!-- /Backgound Image -->

    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1 text-center">
                <ul class="hero-area-tree">
                    <li><a href="/home">Home</a></li>
                    <li>Blog</li>
                </ul>
                <h1 class="white-text">Blog Page</h1>
            </div>
        </div>
    </div>

</div>
<!-- /Hero-area -->

<!-- Blog -->
<div id="blog" class="section">

    <!-- container -->
    <div class="container">

        <!-- row -->
        <div class="row">

            <!-- main blog -->
            <div id="main" class="col-md-9">

                <!-- pagination -->

                <div id="container" class="clearfix">

                    <div id="content" class="defaults">

                        <!-- item container -->
                        <ul id="itemContainer">
                            <!-- single blog -->

                            <% try { if(data.length){
                            for(var i = 0;i < data.length;i++) { %>

                                <div class="col-md-6">
                                    <div class="single-blog">
                                        <div class="blog-img">
                                            <a href="/blog/blog-detail/<%= data[i].id %>">
                                                <img src="../assets/img/<%= data[i].image %>" alt="" height="200" width="200">
                                            </a>
                                        </div>
                                        <h4><a href="/blog/blog-detail/<%= data[i].id %>"><%=data[i].title%></a></h4>
                                        <div class="blog-meta">
                                            <span class="blog-meta-author"> <a href="#"></a></span>
                                            <div class="pull-right">
                                                <span><% var date = data[i].created_at %><%= date.toLocaleString()%></span>
                                                <span class="blog-meta-comments"><a href="/blog/blog-detail/<%= data[i].id %>"><i class="fa fa-comments"></i> </a></span>
                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                </div>
                            <%  }} %>

                            <%  }catch (ex){}%>

                            <!-- /single blog -->
                        </ul>

                    </div> <!--! end of #content -->
                </div>
                <!-- navigation holder -->
                <div class="col-md-12 col-md-offset-4">
                    <div class="holder"></div>
                </div>
                <!-- /pagination-->
            </div>
            <!-- /main blog -->

            <!-- aside blog -->
            <div id="aside" class="col-md-3">

                <!--&lt;!&ndash; search widget &ndash;&gt;-->
                <!--<div class="widget search-widget">-->
                    <!--<form>-->
                        <!--<input class="input" type="text" name="search">-->
                        <!--<button><i class="fa fa-search"></i></button>-->
                    <!--</form>-->
                <!--</div>-->
                <!--&lt;!&ndash; /search widget &ndash;&gt;-->

                <!--&lt;!&ndash; category widget &ndash;&gt;-->
                <!--<div class="widget category-widget">-->
                    <!--<h3>Categories</h3>-->
                    <!--<a class="category" href="#">Web <span>12</span></a>-->
                    <!--<a class="category" href="#">Css <span>5</span></a>-->
                    <!--<a class="category" href="#">Wordpress <span>24</span></a>-->
                    <!--<a class="category" href="#">Html <span>78</span></a>-->
                    <!--<a class="category" href="#">Business <span>36</span></a>-->
                <!--</div>-->
                <!--&lt;!&ndash; /category widget &ndash;&gt;-->

                <!-- posts widget -->
                <div class="widget posts-widget">

                    <h3>Recent Posts</h3>

                    <% try { if(data1.length){
                    for(var i = 0;i < data1.length;i++) { %>

                        <!-- single posts -->
                        <div class="single-post">
                            <a class="single-post-img" href="/blog/blog-detail/<%= data1[i].id %>">
                                <img src="../assets/img/<%= data1[i].image %>" alt="">
                            </a>
                            <a href="/blog/blog-detail/<%= data1[i].id %>"><%=data1[i].title%></a>
                            <p><small>Date : <% var date = data1[i].created_at %><%= date.toLocaleString()%></small></p>
                        </div>
                        <hr>
                        <!-- /single posts -->
                    <%  }} %>
                    <%  }catch (ex){}%>

                </div>
                <!-- /posts widget -->

                <!-- tags widget -->
                <div class="widget tags-widget">
                    <h3>Tags</h3>
                    <a class="tag" href="#">Web</a>
                    <a class="tag" href="#">Photography</a>
                    <a class="tag" href="#">Css</a>
                    <a class="tag" href="#">Responsive</a>
                    <a class="tag" href="#">Wordpress</a>
                    <a class="tag" href="#">Html</a>
                    <a class="tag" href="#">Website</a>
                    <a class="tag" href="#">Business</a>
                </div>
                <!-- /tags widget -->

            </div>
            <!-- /aside blog -->

        </div>
        <!-- row -->

    </div>
    <!-- container -->

</div>
<!-- /Blog -->

<!-- Footer -->
<% include public_footer.ejs%>
<!-- /Footer -->

</body>
</html>