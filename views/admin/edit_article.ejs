<!doctype html>
<html class="no-js" lang="en">

<% include header.ejs%>

<body>
<!--[if lt IE 8]>
<p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
<![endif]-->

<!-- Start Left menu area -->
<% include admin_sidebar.ejs%>
<!-- End Left menu area -->

<!-- Start Welcome area -->
<!-- Mobile Menu -->
<% include admin_header.ejs%>
<!-- Mobile Menu end -->

<!-- Single pro tab review Start-->
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <ul id="myTabedu1" class="tab-review-design">
                        <li class="active"><a href="#description">Edit Article</a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content custom-product-edit">
                        <div class="product-tab-list tab-pane fade active in" id="description">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="review-content-section">
                                        <div id="dropzone1" class="pro-ad">

                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <%try{%>

                                                    <form action="/back-office/Node-Admin-Updatearticle/updatearticle/<%= data[0].id%>" method="post" enctype="multipart/form-data" id="addarticle">
                                                        <fieldset>
                                                            <div class="form-group">
                                                                <label for="articleTitle">Article Title:</label>
                                                                <input type="hidden" class="form-control" id="id" name="id" <% if(data.length){%> value="<%= data[0].id%>" <%}%>>
                                                                <input type="text" class="form-control" id="title" name="title" required <%if(data.length) {%>value="<%= data[0].title%>" <%}%> >
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="articleDescription">Article Description:</label>
                                                                <textarea class="form-control" id="description" name="description"  required><%if(data.length) {%><%= data[0].description%><%}%></textarea>
                                                            </div>

                                                            <div>
                                                                <label for="inputFile">File Upload:</label>
                                                                <input type="file" class="form-control-file" id="image" name="image" <%if(data.length) {%>value="<%= data[0].image%>" <%}%>>

                                                                <br>

                                                                <% if(data[0].image){ %>
                                                                    <label for="inputFile">Uploaded File is:</label>
                                                                    <br>
                                                                    <img src="/assets/img/<%= data[0].image %>" alt="Image" height="100" width="100">
                                                                <%  }else{ %>
                                                                    <b>No File Uploaded</b>
                                                                <% } %>

                                                            </div>

                                                        </fieldset>
                                                        <br>
                                                        <button type="submit" class="btn btn-success loginbtn">Submit</button>
                                                        <button type="reset" class="btn btn-success loginbtn">Reset</button>

                                                    </form>

                                                <%}catch (ex){}%>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Footer-->
<% include admin_footer.ejs%>
</body>

</html>