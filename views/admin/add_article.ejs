<!-- Start Left menu area -->
<% include admin_sidebar.ejs%>
<!-- End Left menu area -->

<!-- Start Welcome area -->
<!-- Mobile Menu -->
<% include admin_header.ejs%>
<!-- Mobile Menu end -->

<!-- Single pro tab review Start-->
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <ul id="myTabedu1" class="tab-review-design">
                        <li class="active"><a href="#description">Add Article</a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content custom-product-edit">
                        <div class="product-tab-list tab-pane fade active in" id="description">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="review-content-section">
                                        <div id="dropzone1" class="pro-ad">

                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <%try{%>

                                                <form action="/back-office/Node-Admin-Savearticle/savearticle" method="post" enctype="multipart/form-data" id="addarticle">
                                                    <fieldset>
                                                        <div class="form-group">
                                                            <label for="articleTitle">Article Title:</label>
                                                            <input type="text" class="form-control" id="title" name="title" placeholder="Article Title" required>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="articleDescription">Article Description:</label>
                                                            <textarea class="form-control" id="description" name="description" placeholder="Article Title" rows="5" required></textarea>
                                                        </div>

                                                        <div class="form-group">
                                                            <label for="inputFile">File Upload:</label>
                                                            <input type="file" class="form-control-file" id="image" name="image" aria-describedby="fileHelp" required>
                                                        </div>

                                                        <br>

                                                    </fieldset>
                                                    <button type="submit" class="btn btn-success loginbtn">Submit</button>
                                                    <button type="reset" class="btn btn-success loginbtn">Reset</button>

                                                </form>

                                            <%}catch (ex){}%>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Footer-->
<% include admin_footer.ejs%>
</body>

</html>